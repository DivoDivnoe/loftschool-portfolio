extends ../_template

block variables
  - var title = "Сайт портфолио";

block content
  section.auth
    .container.auth__wrapper
      .auth__form-wrapper
        .auth__form.form
          h2.form__title Авторизуйтесь
          form(action="#")
            .form__field-wrapper
              input.form__field(type="text", id="login", name="login", placeholder="Логин")
              label.form__field-picture(for="login")
                svg.form__field-icon(fill="#c4cbcd", width="14", height="15")
                  use(xlink:href="img/sprite.svg#icon-login")
            .form__field-wrapper
              input.form__field(type="text", id="password" name="password", placeholder="Пароль")
              label.form__field-picture(for="password")
                svg.form__field-icon(fill="#c4cbcd", width="17", height="16")
                  use(xlink:href="img/sprite.svg#icon-password")
            .form__capture-wrapper
              input.form__capture(type="checkbox", id="human", name="human", value="yes")
              label.form__capture-label(for="human") Я человек
            .form__confirm-wrapper
              h3.form__confirm-title Вы точно не робот?
              .form__confirm-controls
                .form__confirm-item
                  input.form__confirm(type="radio", id="is-robot", name="not-robot", value="yes", checked)
                  label.form__confirm-label(for="is-robot") Да
                .form__confirm-item
                  input.form__confirm(type="radio", id="not-robot", name="not-robot", value="no")
                  label.form__confirm-label(for="not-robot") Не уверен
            .form__menu
              a.form__menu-item.button(href="index.html") На главную
              button.form__menu-item.form__menu-item--submit.button(type="submit") Войти
      footer.auth-footer
        include ../common/copyright
        +copyright("index-footer__copyright")
  .preloader
    .preloader__animation
      svg.preloader__icon(width="52.586", height="63.73", viewBox="0 0 52.586 63.73")
        circle.preloader__circle(stroke="#ffffff", stroke-width="2.5864", stroke-miterlimit="10", cx="26.293", cy="37.438", r="25", fill="none")
        circle.preloader__ball(cx="26.293", cy="4.5", r="4.5", fill="#ffffff")
      .preloader__percents 100%